<UserControl x:Class="Mapsui.Samples.Silverlight.MainPage" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Mapsui.Samples.Silverlight.UI"
             xmlns:xaml="clr-namespace:Mapsui.UI.Xaml;assembly=Mapsui.UI.Xaml"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600" 
    VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
    <Grid x:Name="LayoutRoot" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <xaml:MapControl x:Name="Map" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <ui:GUIOverlay x:Name="Gui" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
