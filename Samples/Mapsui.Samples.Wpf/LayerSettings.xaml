<Window x:Class="Mapsui.Samples.Wpf.LayerSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LayerSettings" Height="300" Width="300">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Gray">
        <Border BorderBrush="White" Opacity="0.75" Margin="11,11,0,0" Background="White" BorderThickness="6" CornerRadius="2" VerticalAlignment="Top" HorizontalAlignment="Left" Height="20" Width="90">
            <StackPanel Width="Auto" Height="Auto" Margin="0,-6">
                <Label Content="Point style" FontSize="12" FontWeight="Bold" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3,-3"/>
            </StackPanel>
        </Border>
        <Border BorderBrush="White" Opacity="0.75" Margin="11,43,0,0" Background="White" BorderThickness="6" CornerRadius="2" VerticalAlignment="Top" HorizontalAlignment="Left" Height="60" Width="90">
            <StackPanel Width="Auto" Height="Auto">
                <RadioButton IsChecked="True" Content="Circle" FontSize="12"/>
                <RadioButton Content="Square" FontSize="12" />
                <RadioButton Content="Picture" FontSize="12" />
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
