<Window x:Class="Mapsui.Samples.Wpf.pointSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="pointSettings" Height="180.597" Width="208.956">
    <Grid Loaded="settingsInfo_Loaded" Margin="0,0,2,6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="278*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="showImage" Content="Show image" HorizontalAlignment="Left" Margin="62,107,0,0" VerticalAlignment="Top" Width="75" Click="showImage_Click" Height="22"/>
        <TextBox x:Name="LatBox" HorizontalAlignment="Left" Height="23" Margin="98,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
        <Label x:Name="LatLabel" Content="Latitude" HorizontalAlignment="Left" Margin="13,13,0,0" VerticalAlignment="Top" Height="26" Width="53"/>
        <Label x:Name="LonLabel" Content="Longitude" HorizontalAlignment="Left" Margin="13,62,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.324,0.515" Height="26" Width="64"/>
        <TextBox x:Name="LongBox" HorizontalAlignment="Left" Height="23" Margin="98,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" IsReadOnly="True"/>

    </Grid>
</Window>
